<h2 class="mb-4">Editar Usuário</h2>

<%= form_for @user, url: admin_user_path(@user), method: :put, html: { class: 'needs-validation', novalidate: true } do |f| %>
  <div class="form-group mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, class: "form-control", placeholder: "Digite o email do usuário", required: true %>
    <div class="invalid-feedback">
      Por favor, insira um email válido.
    </div>
  </div>

  <div class="form-group mb-4">
    <%= f.label :role %>
    <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, { prompt: 'Selecione um papel' }, { class: 'form-control' } %>
  </div>

  <div class="d-flex" style="gap: 10px;">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to 'Voltar', admin_users_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
