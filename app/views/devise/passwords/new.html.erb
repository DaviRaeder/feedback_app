<h2 class="mb-4 text-center">Esqueceu sua senha?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'needs-validation', method: :post, novalidate: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite seu email", required: true %>
    <div class="invalid-feedback">
      Por favor, insira um email válido.
    </div>
  </div>

  <div class="actions text-center">
    <%= f.submit "Enviar instruções para redefinir a senha", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
